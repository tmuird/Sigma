<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SigmaApp.Views.AddContactPage"
             Title="Add Contact"
             BackgroundColor="White">
    <VerticalStackLayout Padding="20">
        <Label Text="Add Contact" FontSize="48" FontAttributes="Bold" TextColor="Black" />
        <Label Text="User's Name" FontSize="22" FontAttributes="Bold" TextColor="Black" Margin="0,20,0,0"/>
        <Entry x:Name="name" Placeholder="Name" Margin="0,10,0,0"/>
        <Button Text="Add" Clicked="Add_Clicked" BackgroundColor="#3ddc97" TextColor="White" Margin="0,20,0,0"/>
    </VerticalStackLayout>
</ContentPage>
