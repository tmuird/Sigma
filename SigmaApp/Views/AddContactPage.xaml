<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SigmaApp.Views.AddContactPage"
             Title="AddContactPage"
             BackgroundColor="White">
    <VerticalStackLayout>
        <Label Grid.Row="0" Text="Add Contact" FontFamily="Urbanist#800" FontSize="48" FontAttributes="Bold" TextColor="#FF000000" VerticalOptions="StartAndExpand" Grid.ColumnSpan="100" />
        <Label Text="User's Name" FontFamily="Urbanist#800" FontSize="22" FontAttributes="Bold" TextColor="#FF000000" Grid.Row="1"/>
        <Entry x:Name="name" Placeholder="Name" Grid.Row="2" VerticalOptions="StartAndExpand"/>
        <Button Text="Add"
         Clicked="Add_Clicked" BackgroundColor="#3ddc97"/>
    </VerticalStackLayout>
        
</ContentPage>